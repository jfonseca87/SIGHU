<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="Los Pitagoricos">

    <title>@ViewBag.Title - SIGHU</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Assets/css/Blog.css" rel="stylesheet" />

    <!-- Styles for tables in WebApp -->
    <link href="~/Assets/css/dataTables.min.css" rel="stylesheet" />
   
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="container">

        <div class="blog-header jumbotron">
            <div class="container text-center img-responsive">
                <a href="@Url.Action("Indexaf", "Home")">
                    <img src="~/Assets/Images/Logo SIGHU.jpg" />
                </a>
            </div>
        </div>

        <div class="row">

            <div class="col-sm-8 blog-main">
                @RenderBody()
            </div><!-- /.blog-main -->

            <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
                <div class="sidebar-module" align="center">
                    @RenderSection("Personal", false)
                </div>
                <div class="sidebar-module">
                    <div class="panel panel-danger">
                        <div class="panel-body text-center danger">
                           <h3> <b>Menú</b></h3> 
                        </div>
                        <div class="panel-footer">@RenderSection("Menu", false)</div>
                    </div>
                </div>
            </div><!-- /.blog-sidebar -->

        </div><!-- /.row -->

    </div><!-- /.container -->

    <footer class="blog-footer">
        <p>Desarrollado por <b>PITAGURICS</b>.</p>
        <p>
            <a href="#">Volver arriba</a>
        </p>
    </footer>

    <div class="modal fade" id="modal1" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content" id="content">
                <div class="modal-body cuerpo">
                    cargando...
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="@Url.Content("~/Assets/js/jquery.js")"></script>
    <script src="@Url.Content("~/Assets/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Assets/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Assets/js/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Assets/js/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.Content("~/Assets/js/logic.js")"></script>
</body>
</html>